<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/about_category">
                			
        <PreferenceScreen
		    android:title="@string/about"
		    android:summary="@string/about_summary">
			<intent
			    android:action="android.intent.action.MAIN"
			    android:targetPackage="com.gregmcnew.android.pax"
			    android:targetClass="com.gregmcnew.android.pax.AboutActivity" />
		</PreferenceScreen>
	</PreferenceCategory>

    <PreferenceCategory android:title="@string/settings">

        <CheckBoxPreference android:key="sound"
                			android:title="@string/sound"
                			android:summary="@string/sound_summary"
                			android:defaultValue="false"/>

        <CheckBoxPreference android:key="show_fps"
                			android:title="@string/show_fps"
                			android:defaultValue="true" />

        <CheckBoxPreference android:key="benchmark_mode"
                			android:title="@string/benchmark_mode"
                			android:summary="@string/benchmark_mode_summary"
                			android:defaultValue="false" />

    	<ListPreference android:entries="@array/ai_difficulty_array"
                        android:entryValues="@array/ai_difficulty_array"
                        android:title="@string/ai_difficulty"
                        android:defaultValue="@string/ai_difficulty_easy" android:key="ai_difficulty_preference"/>

    	<ListPreference android:title="@string/game_speed"
                        android:entries="@array/game_speed_array"
                        android:entryValues="@array/game_speed_array"
                        android:defaultValue="@string/game_speed_normal" android:key="game_speed_preference"/>

	</PreferenceCategory>

</PreferenceScreen>