<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/settings">

        <CheckBoxPreference android:key="sound_preference"
                			android:title="@string/sound" android:defaultValue="false" android:enabled="false"/>

        <CheckBoxPreference android:key="show_fps"
                			android:title="@string/show_fps" android:defaultValue="true" />

    	<ListPreference android:entries="@array/ai_difficulty_array"
                        android:entryValues="@array/ai_difficulty_array"
                        android:title="@string/ai_difficulty"
                        android:defaultValue="@string/ai_difficulty_easy" android:key="ai_difficulty_preference"/>

    	<ListPreference android:title="@string/game_speed"
                        android:entries="@array/game_speed_array"
                        android:entryValues="@array/game_speed_array"
                        android:defaultValue="@string/game_speed_normal" android:key="game_speed_preference"/>

        <CheckBoxPreference android:key="black_background"
                			android:title="@string/black_background" android:defaultValue="false"/>

	</PreferenceCategory>

</PreferenceScreen>